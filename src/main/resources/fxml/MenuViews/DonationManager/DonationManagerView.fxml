<BorderPane prefHeight="745.0" prefWidth="983.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pranav.temple_software.controllers.menuControllers.DonationManager.DonationManagerController">

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" stylesheets="@../../../css/main.css">
            <Button fx:id="saveButton" onAction="#handleFinalDonationDeleteSave" prefHeight="50.0" prefWidth="379.0" style="-fx-background-color: green;" styleClass="action-button" text="Save" />
            <Button fx:id="rearrangeButton" styleClass="action-button" text="Rearrange" />
            <Button fx:id="openAddDonationButton" onAction="#openAddDonationPopup" styleClass="action-button" text="Add Donation" />
