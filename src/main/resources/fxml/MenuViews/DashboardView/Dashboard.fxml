<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root" stylesheets="@../../../css/modern-dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pranav.temple_software.controllers.menuControllers.History.DashboardController">
    <top>
        <VBox alignment="CENTER_LEFT" styleClass="header-section" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label styleClass="dashboard-title" text="ಸೇವಾ/ದೇಣಿಗೆ ಡ್ಯಾಶ್‌ಬೋರ್ಡ್" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#openFilterWindow" styleClass="secondary-button" text="🔍 ಫಿಲ್ಟರ್" />
                <Button onAction="#handleExportToExcel" styleClass="secondary-button" text="📋 ಎಕ್ಸೆಲ್‌ಗೆ ರಫ್ತು ಮಾಡಿ" />
            <VBox.margin>
               <Insets left="20.0" right="20.0" top="15.0" />
            </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="30.0" styleClass="summary-container">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
                <Label fx:id="totalRecordsLabel" styleClass="summary-label" text="📋 ಒಟ್ಟು ದಾಖಲೆಗಳು: 0" />
                <Label fx:id="totalAmountLabel" styleClass="summary-amount" text="💰 ಒಟ್ಟು ಮೊತ್ತ: ₹0.00" />
            </HBox>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <StackPane fx:id="tableStackPane" styleClass="table-container">
            <TableView fx:id="dashboardTable" styleClass="modern-table">
                <columns>
                    <TableColumn fx:id="itemNameColumn" minWidth="250.0" prefWidth="300.0" text="ಹೆಸರು" />
                    <TableColumn fx:id="itemTypeColumn" minWidth="120.0" prefWidth="150.0" text="ವಿಧ" />
                    <TableColumn fx:id="totalCountColumn" minWidth="100.0" prefWidth="120.0" text="ಒಟ್ಟು" />
                    <TableColumn fx:id="cashCountColumn" minWidth="100.0" prefWidth="120.0" text="ನಗದು" />
                    <TableColumn fx:id="onlineCountColumn" minWidth="100.0" prefWidth="120.0" text="ಆನ್ಲೈನ್" />
                    <TableColumn fx:id="totalAmountColumn" minWidth="150.0" prefWidth="180.0" text="ಒಟ್ಟು ಮೊತ್ತ" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <ProgressIndicator fx:id="progressIndicator" maxHeight="60" maxWidth="60" visible="false" />
        </StackPane>
    </center>
</BorderPane>
