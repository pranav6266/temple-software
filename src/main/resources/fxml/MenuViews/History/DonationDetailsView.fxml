<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pranav.temple_software.controllers.menuControllers.History.DonationDetailsController">

    <VBox layoutX="20.0" layoutY="20.0" prefHeight="460.0" prefWidth="560.0" spacing="15">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Header -->
        <Label text="ದೇಣಿಗೆ ರಶೀದಿ ವಿವರಗಳು" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <Separator/>

        <!-- Receipt Information -->
        <Label fx:id="donationReceiptIdLabel" text="ದೇಣಿಗೆ ರಶೀದಿ ಸಂಖ್ಯೆ: " style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <!-- Devotee Details -->
        <VBox spacing="8">
            <Label text="ಭಕ್ತರ ವಿವರಗಳು:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <Label fx:id="donationDevoteeNameLabel" text="ಭಕ್ತರ ಹೆಸರು: " style="-fx-font-size: 14px;"/>
            <Label fx:id="donationPhoneNumberLabel" text="ದೂರವಾಣಿ: " style="-fx-font-size: 14px;"/>
            <Text fx:id="donationAddressText" text="ವಿಳಾಸ: " wrappingWidth="500" style="-fx-font-size: 14px;"/>
            <Label fx:id="donationRashiLabel" text="ಜನ್ಮ ರಾಶಿ: " style="-fx-font-size: 14px;"/>
            <Label fx:id="donationNakshatraLabel" text="ಜನ್ಮ ನಕ್ಷತ್ರ: " style="-fx-font-size: 14px;"/>
        </VBox>

        <Separator/>

        <!-- Donation Details -->
        <VBox spacing="8">
            <Label text="ದೇಣಿಗೆ ವಿವರಗಳು:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <Label fx:id="donationDateLabel" text="ದಿನಾಂಕ: " style="-fx-font-size: 14px;"/>
            <Label fx:id="donationNameLabel" text="ದೇಣಿಗೆ ವಿಧ: " style="-fx-font-size: 14px;"/>
            <Label fx:id="donationAmountLabel" text="ದೇಣಿಗೆ ಮೊತ್ತ: " style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
            <Label fx:id="donationPaymentModeLabel" text="ಪಾವತಿ ವಿಧಾನ: " style="-fx-font-size: 14px;"/>
        </VBox>

        <!-- Close Button -->
        <HBox alignment="CENTER" spacing="10">
            <Button text="ಮುಚ್ಚಿ" onAction="#handleClose"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16;"/>
        </HBox>
    </VBox>

</AnchorPane>
