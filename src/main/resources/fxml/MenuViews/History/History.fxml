<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" styleClass="history-root" stylesheets="@../../../css/modern-history.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pranav.temple_software.controllers.menuControllers.History.HistoryController">
    <top>
        <HBox styleClass="header-section">
            <VBox alignment="CENTER_LEFT">
                <Label styleClass="page-title" text="📋 ರಶೀದಿ ಇತಿಹಾಸ" />
                <Label fx:id="currentViewLabel" styleClass="current-view-label" text="ಸೇವಾ ರಶೀದಿ ಇತಿಹಾಸ" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <HBox styleClass="actions-bar">
                <ComboBox fx:id="viewSelectionComboBox" promptText="ವೀಕ್ಷಣೆ ಆಯ್ಕೆ ಮಾಡಿ" styleClass="view-selection-combo" />
                <Button fx:id="dashboardButton" onAction="#handleDashboardButton" styleClass="dashboard-button" text="📊 ಡ್ಯಾಶ್‌ಬೋರ್ಡ್" />
            </HBox>
        </HBox>
    </top>
    <center>
        <StackPane styleClass="content-area">
            <TableView fx:id="historyTable" styleClass="modern-history-table">
                <columns>
                    <TableColumn fx:id="receiptIdColumn" minWidth="80.0" styleClass="id-column" text="ರಶೀದಿ ಸಂ." />
                    <TableColumn fx:id="devoteeNameColumn" minWidth="200.0" styleClass="name-column" text="ಭಕ್ತರ ಹೆಸರು" />
                    <TableColumn fx:id="sevaDateColumn" minWidth="110.0" styleClass="date-column" text="ದಿನಾಂಕ" />
                    <TableColumn fx:id="sevaColumn" minWidth="120.0" styleClass="amount-column" text="ಸೇವೆಗಳು (₹)" />
                    <TableColumn fx:id="visheshaPoojeColumn" minWidth="120.0" styleClass="amount-column" text="ವಿಶೇಷ ಪೂಜೆ (₹)" />
                    <TableColumn fx:id="totalAmountColumn" minWidth="130.0" styleClass="total-column" text="ಒಟ್ಟು ಮೊತ್ತ (₹)" />
                    <TableColumn fx:id="detailsColumn" minWidth="120.0" styleClass="action-column" text="ವಿವರಗಳು" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            <TableView fx:id="donationHistoryTable" styleClass="modern-history-table" visible="false">
                <columns>
                    <TableColumn fx:id="donationReceiptIdColumn" minWidth="80.0" styleClass="id-column" text="ರಶೀದಿ ಸಂ." />
                    <TableColumn fx:id="donationDevoteeNameColumn" minWidth="200.0" styleClass="name-column" text="ಭಕ್ತರ ಹೆಸರು" />
                    <TableColumn fx:id="donationDateColumn" minWidth="110.0" styleClass="date-column" text="ದಿನಾಂಕ" />
                    <TableColumn fx:id="donationNameColumn" minWidth="200.0" styleClass="service-column" text="ದೇಣಿಗೆ ಪ್ರಕಾರ" />
                    <TableColumn fx:id="donationAmountColumn" minWidth="130.0" styleClass="amount-column" text="ದೇಣಿಗೆ ಮೊತ್ತ (₹)" />
                    <TableColumn fx:id="donationDetailsColumn" minWidth="120.0" styleClass="action-column" text="ವಿವರಗಳು" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            <TableView fx:id="inKindDonationHistoryTable" styleClass="modern-history-table" visible="false">
                <columns>
                    <TableColumn fx:id="inKindReceiptIdColumn" minWidth="80.0" styleClass="id-column" text="ರಶೀದಿ ಸಂ." />
                    <TableColumn fx:id="inKindDevoteeNameColumn" minWidth="200.0" styleClass="name-column" text="ಭಕ್ತರ ಹೆಸರು" />
                    <TableColumn fx:id="inKindDonationDateColumn" minWidth="110.0" styleClass="date-column" text="ದಿನಾಂಕ" />
                    <TableColumn fx:id="itemDescriptionColumn" minWidth="300.0" styleClass="service-column" text="ವಸ್ತುವಿನ ವಿವರಣೆ" />
                    <TableColumn fx:id="inKindDetailsColumn" minWidth="120.0" styleClass="action-column" text="ವಿವರಗಳು" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            <TableView fx:id="shashwathaPoojaHistoryTable" styleClass="modern-history-table" visible="false">
                <columns>
                    <TableColumn fx:id="shashwathaReceiptIdColumn" minWidth="80.0" styleClass="id-column" text="ರಶೀದಿ ಸಂ." />
                    <TableColumn fx:id="shashwathaDevoteeNameColumn" minWidth="200.0" styleClass="name-column" text="ಭಕ್ತರ ಹೆಸರು" />
                    <TableColumn fx:id="shashwathaReceiptDateColumn" minWidth="110.0" styleClass="date-column" text="ರಶೀದಿ ದಿನಾಂಕ" />
                    <TableColumn fx:id="shashwathaPoojaDateColumn" minWidth="300.0" styleClass="service-column" text="ಪೂಜಾ ದಿನಾಂಕ/ವಿವರ" />
                    <TableColumn fx:id="shashwathaDetailsColumn" minWidth="120.0" styleClass="action-column" text="ವಿವರಗಳು" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            <TableView fx:id="karyakramaHistoryTable" styleClass="modern-history-table" visible="false">
                <columns>
                    <TableColumn fx:id="karyakramaReceiptIdColumn" minWidth="80.0" styleClass="id-column" text="ರಶೀದಿ ಸಂ." />
                    <TableColumn fx:id="karyakramaDevoteeNameColumn" minWidth="200.0" styleClass="name-column" text="ಭಕ್ತರ ಹೆಸರು" />
                    <TableColumn fx:id="karyakramaNameColumn" minWidth="200.0" styleClass="service-column" text="ಕಾರ್ಯಕ್ರಮ" />
                    <TableColumn fx:id="karyakramaReceiptDateColumn" minWidth="110.0" styleClass="date-column" text="ರಶೀದಿ ದಿನಾಂಕ" />
                    <TableColumn fx:id="karyakramaTotalAmountColumn" minWidth="130.0" styleClass="total-column" text="ಒಟ್ಟು ಮೊತ್ತ (₹)" />
                    <TableColumn fx:id="karyakramaDetailsColumn" minWidth="120.0" styleClass="action-column" text="ವಿವರಗಳು" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
        </StackPane>
    </center>
    <bottom>
        <HBox styleClass="footer-section">
            <Label styleClass="footer-label" text="ಒಟ್ಟು ದಾಖಲೆಗಳು: " />
            <Label fx:id="totalRecordsLabel" styleClass="footer-value" text="0" />
            <Region HBox.hgrow="ALWAYS" />
            <Label styleClass="footer-copyright" text="© ಶ್ರೀ ಶಾಸ್ತಾರ ಸುಬ್ರಹ್ಮಣ್ಯೇಶ್ವರ ದೇವಸ್ಥಾನ" />
        </HBox>
    </bottom>
</BorderPane>