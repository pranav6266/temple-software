<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="635.0" prefWidth="1085.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pranav.temple_software.controllers.menuControllers.History.HistoryController">

    <!-- Top controls -->
    <HBox alignment="CENTER_LEFT" spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <Button onAction="#openFilterPopup" text="Apply Filter" />
        <Button fx:id="toggleViewButton" onAction="#handleToggleView" text="ದೇಣಿಗೆ ರಶೀದಿಗಳನ್ನು ನೋಡಿ" />
        <Label fx:id="currentViewLabel" text="ಸೇವಾ ರಶೀದಿ ಇತಿಹಾಸ" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
    </HBox>

    <!-- Seva Receipts Table (existing) -->
    <TableView fx:id="historyTable" prefHeight="578.0" prefWidth="925.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50">
        <columns>
            <TableColumn fx:id="receiptIdColumn" text="ರಶೀದಿ ಸಂಖ್ಯೆ" />
            <TableColumn fx:id="devoteeNameColumn" prefWidth="199.0" text="ಭಕ್ತರ ಹೆಸರು" />
            <TableColumn fx:id="sevaDateColumn" prefWidth="69.0" text="ದಿನಾಂಕ" />
            <TableColumn fx:id="totalAmountColumn" prefWidth="110.0" text="ಒಟ್ಟು ಮೊತ್ತ" />
            <TableColumn fx:id="donationColumn" prefWidth="83.0" text="ದೇಣಿಗೆ" />
            <TableColumn fx:id="otherSevaColumn" prefWidth="98.0" text="ಇತರೆ ಸೇವೆ" />
            <TableColumn fx:id="sevaColumn" prefWidth="79.0" text="ಸೇವೆ" />
            <TableColumn fx:id="paymentMode" prefWidth="117.0" text="ಪಾವತಿ ವಿಧಾನ " />
            <TableColumn fx:id="isDonationColumn" prefWidth="111.0" text="ದೇಣಿಗೆ ಇದೆಯೇ?" />
            <TableColumn fx:id="detailsColumn" prefWidth="117.0" text="ವಿವರಗಳು" />
        </columns>
    </TableView>

    <!-- Donation Receipts Table (new) -->
    <TableView fx:id="donationHistoryTable" prefHeight="578.0" prefWidth="925.0"
               visible="false" managed="true"
               AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10"
               AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50">
        <columns>
            <TableColumn fx:id="donationReceiptIdColumn" text="ದೇಣಿಗೆ ರಶೀದಿ ಸಂಖ್ಯೆ" />
            <TableColumn fx:id="donationDevoteeNameColumn" prefWidth="199.0" text="ಭಕ್ತರ ಹೆಸರು" />
            <TableColumn fx:id="donationDateColumn" prefWidth="100.0" text="ದಿನಾಂಕ" />
            <TableColumn fx:id="donationNameColumn" prefWidth="150.0" text="ದೇಣಿಗೆ ವಿಧ" />
            <TableColumn fx:id="donationAmountColumn" prefWidth="110.0" text="ದೇಣಿಗೆ ಮೊತ್ತ" />
            <TableColumn fx:id="donationPaymentModeColumn" prefWidth="117.0" text="ಪಾವತಿ ವಿಧಾನ" />
            <TableColumn fx:id="donationDetailsColumn" prefWidth="117.0" text="ವಿವರಗಳು" />
        </columns>
    </TableView>
</AnchorPane>
