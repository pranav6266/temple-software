<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="history-root" stylesheets="@../../../css/modern-history.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pranav.temple_software.controllers.menuControllers.History.HistoryController">
    <top>
        <VBox styleClass="header-section">
            <HBox alignment="CENTER_LEFT">
                <VBox>
                    <Label styleClass="page-title" text="ರಶೀದಿ ಇತಿಹಾಸ" />
                    <Label fx:id="currentViewLabel" styleClass="current-view-label" text="ಸೇವಾ ರಶೀದಿ ಇತಿಹಾಸ" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <HBox styleClass="actions-bar">
                    <ComboBox fx:id="viewSelectionComboBox" styleClass="view-selection-combo" />
                    <Button fx:id="dashboardButton" onAction="#handleDashboardButton" styleClass="dashboard-button" text="📊 ಡ್ಯಾಶ್‌ಬೋರ್ಡ್" />
                </HBox>
            </HBox>
        </VBox>
    </top>
    <center>
        <StackPane fx:id="tableStackPane" styleClass="content-area">
            <TableView fx:id="historyTable" styleClass="modern-history-table">
                <columns>
                    <TableColumn fx:id="receiptIdColumn" prefWidth="100.0" styleClass="id-column" text="ರಶೀದಿ ಸಂಖ್ಯೆ" />
                    <TableColumn fx:id="devoteeNameColumn" prefWidth="250.0" styleClass="name-column" text="ಭಕ್ತರ ಹೆಸರು" />
                    <TableColumn fx:id="sevaDateColumn" prefWidth="150.0" styleClass="date-column" text="ಸೇವಾ ದಿನಾಂಕ" />
                    <TableColumn fx:id="sevaColumn" prefWidth="150.0" styleClass="amount-column" text="ಸೇವೆ" />
                    <TableColumn fx:id="visheshaPoojeColumn" prefWidth="150.0" styleClass="amount-column" text="ವಿಶೇಷ ಪೂಜೆ" />
                    <TableColumn fx:id="totalAmountColumn" prefWidth="150.0" styleClass="total-column" text="ಒಟ್ಟು ಮೊತ್ತ" />
                    <TableColumn fx:id="detailsColumn" prefWidth="120.0" styleClass="action-column" text="ವಿವರಗಳು" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            <TableView fx:id="donationHistoryTable" styleClass="modern-history-table" visible="false">
                <columns>
                    <TableColumn fx:id="donationReceiptIdColumn" prefWidth="100.0" styleClass="id-column" text="ರಶೀದಿ ಸಂಖ್ಯೆ" />
                    <TableColumn fx:id="donationDevoteeNameColumn" prefWidth="300.0" styleClass="name-column" text="ಭಕ್ತರ ಹೆಸರು" />
                    <TableColumn fx:id="donationDateColumn" prefWidth="150.0" styleClass="date-column" text="ದೇಣಿಗೆ ದಿನಾಂಕ" />
                    <TableColumn fx:id="donationNameColumn" prefWidth="250.0" text="ದೇಣಿಗೆ ವಿಧ" />
                    <TableColumn fx:id="donationAmountColumn" prefWidth="150.0" styleClass="total-column" text="ಮೊತ್ತ" />
                    <TableColumn fx:id="donationDetailsColumn" prefWidth="120.0" styleClass="action-column" text="ವಿವರಗಳು" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            <TableView fx:id="inKindDonationHistoryTable" styleClass="modern-history-table" visible="false">
                <columns>
                    <TableColumn fx:id="inKindReceiptIdColumn" prefWidth="100.0" styleClass="id-column" text="ರಶೀದಿ ಸಂಖ್ಯೆ" />
                    <TableColumn fx:id="inKindDevoteeNameColumn" prefWidth="350.0" styleClass="name-column" text="ಭಕ್ತರ ಹೆಸರು" />
                    <TableColumn fx:id="inKindDonationDateColumn" prefWidth="150.0" styleClass="date-column" text="ದೇಣಿಗೆ ದಿನಾಂಕ" />
                    <TableColumn fx:id="itemDescriptionColumn" prefWidth="350.0" text="ವಸ್ತುವಿನ ವಿವರ" />
                    <TableColumn fx:id="inKindDetailsColumn" prefWidth="120.0" styleClass="action-column" text="ವಿವರಗಳು" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            <TableView fx:id="shashwathaPoojaHistoryTable" styleClass="modern-history-table" visible="false">
                <columns>
                    <TableColumn fx:id="shashwathaReceiptIdColumn" prefWidth="100.0" styleClass="id-column" text="ರಶೀದಿ ಸಂಖ್ಯೆ" />
                    <TableColumn fx:id="shashwathaDevoteeNameColumn" prefWidth="400.0" styleClass="name-column" text="ಭಕ್ತರ ಹೆಸರು" />
                    <TableColumn fx:id="shashwathaReceiptDateColumn" prefWidth="200.0" styleClass="date-column" text="ರಶೀದಿ ದಿನಾಂಕ" />
                    <TableColumn fx:id="shashwathaPoojaDateColumn" prefWidth="250.0" styleClass="date-column" text="ಪೂಜಾ ದಿನಾಂಕ" />
                    <TableColumn fx:id="shashwathaDetailsColumn" prefWidth="120.0" styleClass="action-column" text="ವಿವರಗಳು" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            <TableView fx:id="karyakramaHistoryTable" styleClass="modern-history-table" visible="false">
                <columns>
                    <TableColumn fx:id="karyakramaReceiptIdColumn" prefWidth="100.0" styleClass="id-column" text="ರಶೀದಿ ಸಂಖ್ಯೆ" />
                    <TableColumn fx:id="karyakramaDevoteeNameColumn" prefWidth="300.0" styleClass="name-column" text="ಭಕ್ತರ ಹೆಸರು" />
                    <TableColumn fx:id="karyakramaNameColumn" prefWidth="300.0" text="ಕಾರ್ಯಕ್ರಮ" />
                    <TableColumn fx:id="karyakramaReceiptDateColumn" prefWidth="150.0" styleClass="date-column" text="ರಶೀದಿ ದಿನಾಂಕ" />
                    <TableColumn fx:id="karyakramaTotalAmountColumn" prefWidth="150.0" styleClass="total-column" text="ಒಟ್ಟು ಮೊತ್ತ" />
                    <TableColumn fx:id="karyakramaDetailsColumn" prefWidth="120.0" styleClass="action-column" text="ವಿವರಗಳು" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            <ProgressIndicator fx:id="progressIndicator" maxHeight="60" maxWidth="60" visible="false" />
        </StackPane>
    </center>
    <bottom>
        <HBox styleClass="footer-section">
            <Label fx:id="totalRecordsLabel" styleClass="footer-label" text="ಒಟ್ಟು ದಾಖಲೆಗಳು: 0" />
            <Region HBox.hgrow="ALWAYS" />
            <Label styleClass="footer-copyright" text="Temple Software © 2024" />
        </HBox>
    </bottom>
</BorderPane>