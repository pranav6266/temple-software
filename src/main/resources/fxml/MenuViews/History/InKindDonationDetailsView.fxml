<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<ScrollPane styleClass="details-root" stylesheets="@../../../css/modern-details.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pranav.temple_software.controllers.menuControllers.History.InKindDonationDetailsController">
    <VBox styleClass="details-container" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label styleClass="details-header" text="ವಸ್ತು ದೇಣಿಗೆ ವಿವರಗಳು" />

        <Label fx:id="receiptIdLabel" styleClass="receipt-id-label" text="ರಶೀದಿ ಸಂಖ್ಯೆ: " />

        <VBox styleClass="section-container">
            <Label styleClass="section-title" text="ಭಕ್ತರ ವಿವರಗಳು" />
            <GridPane styleClass="info-grid">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <Label fx:id="devoteeNameLabel" styleClass="info-label" text="ಭಕ್ತರ ಹೆಸರು: " GridPane.rowIndex="0" />
                <Label fx:id="phoneNumberLabel" styleClass="info-label" text="ದೂರವಾಣಿ: " GridPane.rowIndex="1" />
                <Label fx:id="donationDateLabel" styleClass="info-label" text="ದಿನಾಂಕ: " GridPane.rowIndex="2" />
                <Label fx:id="paymentModeLabel" styleClass="info-label" text="ಪಾವತಿ ವಿಧಾನ: " GridPane.rowIndex="3" />
                <Label fx:id="rashiLabel" styleClass="info-label" text="ಜನ್ಮ ರಾಶಿ: " GridPane.rowIndex="4" />
                <Label fx:id="nakshatraLabel" styleClass="info-label" text="ಜನ್ಮ ನಕ್ಷತ್ರ: " GridPane.rowIndex="5" />
                <Label fx:id="panNumberLabel" styleClass="info-label" text="PAN ಸಂಖ್ಯೆ: " GridPane.rowIndex="6" />
                <Text fx:id="addressText" styleClass="address-text" text="ವಿಳಾಸ: " wrappingWidth="400" GridPane.rowIndex="7" />
            </GridPane>
        </VBox>

        <VBox styleClass="section-container">
            <Label styleClass="section-title" text="ದೇಣಿಗೆಯ ವಿವರ" />
            <Text fx:id="itemDescriptionText" styleClass="address-text" text="ವಿವರಣೆ..." wrappingWidth="400" />
        </VBox>

        <HBox styleClass="button-container" spacing="15">
            <Button fx:id="reprintButton" onAction="#handleReprint" styleClass="close-button" text="ಮರುಮುದ್ರಣ" />

            <Button onAction="#handleClose" styleClass="close-button" text="ಮುಚ್ಚಿ" />
        </HBox>
    </VBox>
</ScrollPane>